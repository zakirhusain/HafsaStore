<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid android:color="@color/blue2"/>
            <stroke
                android:color="@color/blue2"
                android:width="1dp"/>
            <corners
                android:radius="3dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/blue0"
                android:centerColor="@color/blue1"
                android:endColor="@color/blue2"
                android:angle="-90"/>
            <stroke
                android:color="@color/blue2"
                android:width="1dp"/>
            <corners
                android:radius="3dp"/>
        </shape>
    </item>


</selector>